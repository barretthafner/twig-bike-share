<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Invite a New Subscriber</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="<%= routes.subscribers %>" method="POST">
                <div class="form-group">
                    <input class="form-control" name="subscriber[firstName]" type="text" placeholder="First Name">
                </div>
                <div class="form-group">
                    <input class="form-control" name="subscriber[lastName]" type="text" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <input class="form-control" name="subscriber[email]" type="text" placeholder="email address">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="<%= routes.subscribers %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
